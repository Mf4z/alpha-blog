<% if @article.errors.any? %>
  <h3>Errors stopping the article from being saved</h3>
  <ul>
    <% @article.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <%= form_with(model: @article, local: true)  do |form| %>
    <div class="mb-3">
      <%= form.label :title, class:"form-label"%>
      <%= form.text_field :title, class:"form-control", id:"title", placeholder:"Article Title"%>
    </div>
    <div class="mb-3">
      <%= form.label :description, class:"form-label"%>
      <%= form.text_area :description, class:"form-control", id:"description",rows:"3", placeholder:"Article Description"%>
    </div>
    <div class="mb-3">
      <%= form.submit class:"btn btn-primary"%>
    </div>
  <% end %>
</div>