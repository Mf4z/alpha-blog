<div class="container">
  <h1 class="text-center mt-4">Create Category</h1>
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category,class:"shadow p-3 mb-5 bg-body rounded", local: true)  do |form| %>
            <div class="mb-3">
                <%= form.label :name,"Category Name", class:"form-label"%>
                <%= form.text_field :name, class:"form-control", id:"username", placeholder:"Enter category name"%>
            </div>    
            <div class="mb-3">
                <%= form.submit class:"btn btn-primary"%>
            </div>
        <% end %>
  </div>
</div>
<div class="text-center mb-3">
  <%= link_to 'Return to Articles listing', articles_path, class: "btn btn-dark btn-lg" %>
</div>
